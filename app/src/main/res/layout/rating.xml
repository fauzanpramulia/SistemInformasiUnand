<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title_rating"
        android:layout_width="match_parent"
        android:text="@string/title_rating"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textFontWeight="2"
        android:textSize="60px"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font2"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/desk_rating"
        android:layout_width="match_parent"
        android:layout_below="@+id/title_rating"
        android:gravity="center"
        android:fontFamily="@font/font3"
        android:layout_margin="20px"
        android:text="@string/desk_rating"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@+id/desk_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="rating.json"
            app:lottie_loop="true"
            app:lottie_speed="1.75"
            />

    </LinearLayout>
</RelativeLayout>